<body class="container">
  <h1>Search Results</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @pg_search_recipes.find_each do |recipe| %>
      <tr>
        <td><%= recipe.searchable.name %></td>
        <td><%= recipe.searchable.ingredients %></td>
        <td><%= link_to 'Show', class: "btn btn-primary"%></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @pg_search_recipes %>
  <%= page_entries_info @pg_search_recipes %>
</body>
