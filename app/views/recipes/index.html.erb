<h1>Recipes Index</h1>
<h2>Here are All Your Recipes!</h2>
<td class="button"><%= link_to 'Add a Recipe', new_recipe_path %></td>

<table>
  <thead>
    <tr>
      <th class="headers">Recipe Name</th>
      <th class="headers">Ingredients</th>
      <th class="headers">Directions</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
        <% @recipes.each do |recipe| %>
          <tr class="body">
            <td><%= recipe.name %></td>
            <td><%= recipe.ingredients %></td>
            <td><%= recipe.description %></td>
            <td class="button"><%= link_to 'Show', recipe %></td>
            <td class="button"><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
            <td class="button"><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @recipes %>
<%= page_entries_info @recipes %>
